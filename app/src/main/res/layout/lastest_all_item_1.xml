<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/all_item_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher"/>
            <ImageView
                android:id="@+id/all_item_v"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/bg_user_v"
                android:layout_gravity="right|bottom"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/all_item_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="username"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/all_item_vip"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/all_item_name"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/all_item_passtime"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@+id/all_item_name"
                android:text="time"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>